<div>
  <div class="card-playground">
    <div>
     <%= render "playgrounds/carroussel", playground: playground %>
     <h2 class="mt-3"><%= playground.name%></h2>
    </div>
    <div class="row">
      <div class="col-6">
        <p> <%= playground.description %></p>
      </div>
      <div class="col-6">
        <%= link_to "Create a session",new_playground_session_path(playground),
            class:"button-primary"%>
      </div>
    </div>

    <div class="row">
      <%= link_to "All sessions", "#", class:"col-5"%>
      <%= link_to "All reviews", "#", class:"col-5 mute"%>
    </div>

    <% playground.sessions.each do |session| %>
    <div class="card-session my-3">
      <div>
       <h2>Session :<%= session.date.time.strftime("%k:%M") %>h - <%= (session.date.time + session.duration * 60).strftime("%k:%M") %>h </h2>
       <p><%= session.game_type %></p>
      </div>
      <div class="row d-flex justify-content-between">
          <div class="col-8">
        <% session.players.each do |player|%>
          <%= cl_image_tag player.avatar.key, class: 'avatar' %>
          <% end %>
          </div>
          <div class="col-4">
            <%= link_to "Join", playground_session_bookings_path(session.playground, session),
                       data: {turbo_method: :post}, class: "button-primary" %>
          </div>

      </div>
      <div>
      </div>
    </div>




        <% end %>
