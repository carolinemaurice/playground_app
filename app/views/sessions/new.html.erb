<h1>Create a session</h1>
<%= simple_form_for [@playground, @session] do |f| %>
  <%= f.input :game_type, collection: Session.class_variable_get(:@@GAME_TYPE) %>
  <%= f.input :date %>
  <%= f.input :duration %>
  <%= f.input :minimum_players %>
  <%= f.input :comment %>
  <%= f.submit "confirm", class: "button-primary" %>
<% end %>
